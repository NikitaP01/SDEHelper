<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0"
  ExtensionBundleId="com.sdehelper.panel"
  ExtensionBundleVersion="1.0.0"
  ExtensionBundleName="SDE Helper"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <ExtensionList>
    <Extension Id="com.sdehelper.panel" Version="1.0.0"/>
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <Host Name="PPRO" Version="[24.0,25.9]"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="11.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.sdehelper.panel">
      <DispatchInfo>

        <Resources>
          <MainPath>./index.html</MainPath>
          <ScriptPath>./</ScriptPath>

          <!-- ВАЖНО: возвращаем сюда, как у тебя работало -->
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
          </CEFCommandLine>
        </Resources>

        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>

        <UI>
          <Type>Panel</Type>
          <Menu>SDE Helper</Menu>
          <Geometry>
            <Size>
              <Width>360</Width>
              <Height>520</Height>
            </Size>
            <MinSize>
              <Width>320</Width>
              <Height>360</Height>
            </MinSize>
          </Geometry>
        </UI>

      </DispatchInfo>
    </Extension>
  </DispatchInfoList>

</ExtensionManifest>
